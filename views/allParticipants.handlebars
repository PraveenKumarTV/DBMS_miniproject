<h1 class="mb-4">All Participants</h1>

<div class="card">
  <div class="card-header bg-info text-white">
    <h4>Complete Participant List</h4>
  </div>
  <div class="card-body">
    {{#if participants.length}}
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Participant ID</th>
              <th>Name</th>
              <th>Event</th>
              <th>Department</th>
              <th>Year</th>
              <th>Contact No</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            {{#each participants}}
              <tr>
                <td>{{participantId}}</td>
                <td>{{name}}</td>
                <td>{{eventName}}</td>
                <td>{{department}}</td>
                <td>{{yearOfStudy}}</td>
                <td>{{contactNo}}</td>
                <td>{{email}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="alert alert-info">No participants have registered for any events yet.</div>
    {{/if}}
  </div>
</div>

<div class="mt-3">
  <a href="/events" class="btn btn-secondary">Back to Events</a>
</div>