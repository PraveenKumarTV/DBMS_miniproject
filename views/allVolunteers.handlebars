<h1 class="mb-4">All Volunteers</h1>

<div class="card">
  <div class="card-header bg-success text-white">
    <h4>Complete Volunteer List</h4>
  </div>
  <div class="card-body">
    {{#if volunteers.length}}
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Volunteer ID</th>
              <th>Name</th>
              <th>Event</th>
              <th>Department</th>
              <th>Year</th>
              <th>Contact No</th>
              <th>Email</th>
              <th>Hours Worked</th>
            </tr>
          </thead>
          <tbody>
            {{#each volunteers}}
              <tr>
                <td>{{volunteerId}}</td>
                <td>{{name}}</td>
                <td>{{eventName}}</td>
                <td>{{department}}</td>
                <td>{{yearOfStudy}}</td>
                <td>{{contactNo}}</td>
                <td>{{email}}</td>
                <td>{{hoursWorked}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="alert alert-info">No volunteers have registered for any events yet.</div>
    {{/if}}
  </div>
</div>

<div class="mt-3">
  <a href="/events" class="btn btn-secondary">Back to Events</a>
</div>